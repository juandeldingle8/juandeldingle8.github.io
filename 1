<script>
/* BOOT SEQUENCE */
setTimeout(() => {
  document.getElementById("boot").style.display = "none";
  document.getElementById("desktop").style.display = "block";
  document.getElementById("hum").play();
}, 3000);

/* DRAG WINDOWS */
const win = document.getElementById("about");
const bar = win.querySelector(".title-bar");
let drag = false, x, y;

bar.onmousedown = e => {
  drag = true;
  x = e.clientX - win.offsetLeft;
  y = e.clientY - win.offsetTop;
};

document.onmouseup = () => drag = false;
document.onmousemove = e => {
  if(drag){
    win.style.left = e.clientX - x + "px";
    win.style.top = e.clientY - y + "px";
  }
};

/* FUNCTIONS */
function openAbout(){
  win.style.display = "block";
}

function triggerBSOD(){
  document.getElementById("bsod").style.display = "block";
  document.getElementById("hum").pause();
}

document.addEventListener("keydown", () => {
  if(document.getElementById("bsod").style.display === "block"){
    location.reload();
  }
});
</script>

